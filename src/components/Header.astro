---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="glass-header">
	<nav>
		<h2 class="logo">
			<a href="/">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle; margin-right: 8px; color: var(--hdb-teal);">
					<path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
					<polyline points="9 22 9 12 15 12 15 22"></polyline>
				</svg>
				{SITE_TITLE}
			</a>
		</h2>
		<div class="nav-container">
			<div class="internal-links">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/compare">Compare</HeaderLink>
				<HeaderLink href="/calculator">Calculator</HeaderLink>
				<HeaderLink href="/trends">Trends</HeaderLink>
			</div>
			<div class="search-placeholder">
				<span class="icon">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
						<circle cx="11" cy="11" r="8"></circle>
						<line x1="21" y1="21" x2="16.65" y2="16.65"></line>
					</svg>
				</span>
				<span class="text">Cmd + K</span>
			</div>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1.5rem;
		position: sticky;
		top: 0;
		z-index: 1000;
		background: var(--hdb-glass-bg);
		backdrop-filter: var(--hdb-glass-blur);
		-webkit-backdrop-filter: var(--hdb-glass-blur);
		border-bottom: 1px solid var(--hdb-glass-border);
		box-shadow: var(--hdb-glass-shadow);
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1280px;
		margin: 0 auto;
		height: 4.5rem;
	}
	.logo a {
		font-family: var(--font-heading);
		font-size: 1.5rem;
		font-weight: 800;
		color: var(--hdb-text);
		text-decoration: none;
		background: var(--hdb-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
	.nav-container {
		display: flex;
		align-items: center;
		gap: 2rem;
	}
	.internal-links {
		display: flex;
		gap: 1.5rem;
	}
	.search-placeholder {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.5rem 1rem;
		background: var(--hdb-bg-elevated);
		border: 1px solid var(--hdb-border);
		border-radius: 99px;
		color: var(--hdb-text-muted);
		font-size: 0.875rem;
		cursor: pointer;
		transition: var(--hdb-transition-fast);
	}
	.search-placeholder:hover {
		background: var(--hdb-border);
		color: var(--hdb-text);
	}
	@media (max-width: 768px) {
		.search-placeholder {
			display: none;
		}
		.nav-container {
			gap: 1rem;
		}
	}
</style>
