---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import '../styles/tools.css';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="tool-container">
			<!-- Hero Section -->
			<section class="hero-section">
				<h1 class="hero-title">
					<svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle; margin-right: 12px; color: var(--hdb-teal);">
						<path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
						<polyline points="9 22 9 12 15 12 15 22"></polyline>
					</svg>HDB Insights
				</h1>
				<p class="hero-subtitle">
					Free Singapore HDB resale price analysis powered by real-time government data
				</p>
				<div class="hero-actions">
					<a href="/compare" class="btn btn-primary hero-btn">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" style="margin-right: 8px;">
							<circle cx="11" cy="11" r="8"></circle>
							<line x1="21" y1="21" x2="16.65" y2="16.65"></line>
						</svg>Start Comparing
					</a>
					<a href="/calculator" class="btn btn-secondary hero-btn">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" style="margin-right: 8px;">
							<line x1="18" y1="20" x2="18" y2="10"></line>
							<line x1="12" y1="20" x2="12" y2="4"></line>
							<line x1="6" y1="20" x2="6" y2="14"></line>
						</svg>Find Best Value
					</a>
				</div>
			</section>

			<!-- Tools Grid -->
			<section class="tools-section">
				<h2 class="section-title">
					Powerful Analysis Tools
				</h2>
				<div class="cards-grid">
					<a href="/compare" class="comparison-card glass-panel">
						<div class="card-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--hdb-teal);">
								<rect x="3" y="11" width="18" height="10" rx="2"></rect>
								<circle cx="12" cy="12" r="3"></circle>
								<path d="M12 2v2"></path>
								<path d="M12 18v2"></path>
								<path d="M4.93 4.93l1.41 1.41"></path>
								<path d="M17.66 17.66l1.41 1.41"></path>
								<path d="M2 12h2"></path>
								<path d="M20 12h2"></path>
								<path d="M4.93 19.07l1.41-1.41"></path>
								<path d="M17.66 6.34l1.41-1.41"></path>
							</svg>
						</div>
						<h3 class="card-heading">Price Comparison</h3>
						<p class="card-text">
							Compare HDB prices across different estates and flat types with interactive charts
						</p>
						<div class="card-action">
							Try it free →
						</div>
					</a>

					<a href="/calculator" class="comparison-card glass-panel">
						<div class="card-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--hdb-teal);">
								<rect x="2" y="4" width="20" height="16" rx="2"></rect>
								<line x1="8" y1="10" x2="8" y2="10"></line>
								<line x1="12" y1="10" x2="12" y2="10"></line>
								<line x1="16" y1="10" x2="16" y2="10"></line>
								<line x1="8" y1="14" x2="8" y2="14"></line>
								<line x1="12" y1="14" x2="12" y2="14"></line>
								<line x1="16" y1="14" x2="16" y2="14"></line>
							</svg>
						</div>
						<h3 class="card-heading">Value Calculator</h3>
						<p class="card-text">
							Find the best value HDB units with our automated scoring algorithm
						</p>
						<div class="card-action">
							Calculate now →
						</div>
					</a>

					<a href="/trends" class="comparison-card glass-panel">
						<div class="card-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--hdb-teal);">
								<polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
							</svg>
						</div>
						<h3 class="card-heading">Historical Trends</h3>
						<p class="card-text">
							Analyze price trends over time with moving averages and insights
						</p>
						<div class="card-action">
							View trends →
						</div>
					</a>
				</div>
			</section>

			<!-- Features Section -->
			<section class="features-section">
				<h2 class="section-title">
					Why HDB Insights?
				</h2>
				<div class="features-grid">
					<div class="feature-item">
						<div class="feature-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--hdb-teal);">
								<path d="M3 12a9 9 0 0 1 9-9 9.75 9.75 0 0 1 6.74 2.74L21 8"></path>
								<path d="M21 3v5h-5"></path>
								<path d="M21 12a9 9 0 0 1-9 9 9.75 9.75 0 0 1-6.74-2.74L3 16"></path>
								<path d="M3 21v-5h5"></path>
							</svg>
						</div>
						<h4 class="feature-heading">Real-Time Data</h4>
						<p class="feature-text">
							Data synced daily from official Singapore government APIs
						</p>
					</div>
					<div class="feature-item">
						<div class="feature-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--hdb-teal);">
								<circle cx="12" cy="12" r="10"></circle>
								<path d="M16 8l-8 8"></path>
								<path d="M8 8l8 8"></path>
							</svg>
						</div>
						<h4 class="feature-heading">100% Free</h4>
						<p class="feature-text">
							All tools free to use, no signup required
						</p>
					</div>
					<div class="feature-item">
						<div class="feature-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--hdb-teal);">
								<rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect>
								<line x1="12" y1="18" x2="12.01" y2="18"></line>
							</svg>
						</div>
						<h4 class="feature-heading">Mobile Friendly</h4>
						<p class="feature-text">
							Works perfectly on any device
						</p>
					</div>
					<div class="feature-item">
						<div class="feature-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--hdb-teal);">
								<rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
								<path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
							</svg>
						</div>
						<h4 class="feature-heading">No Ads</h4>
						<p class="feature-text">
							Clean, ad-free experience focused on data
						</p>
					</div>
				</div>
			</section>

			<!-- Data Source Section -->
			<section class="data-source-card glass-panel">
				<h3 class="card-heading">
					<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle; margin-right: 10px; color: var(--hdb-teal);">
						<line x1="18" y1="20" x2="18" y2="10"></line>
						<line x1="12" y1="20" x2="12" y2="4"></line>
						<line x1="6" y1="20" x2="6" y2="14"></line>
					</svg>Data Source
				</h3>
				<p class="card-text">
					All HDB resale transaction data is sourced from the official Singapore Government Open Data portal.
				</p>
				<a href="https://data.gov.sg" target="_blank" rel="noopener noreferrer" class="external-link">
					Visit data.gov.sg →
				</a>
			</section>
		</main>

<style>
	.hero-section {
		text-align: center;
		padding: 6rem 1rem;
		margin-bottom: 2rem;
		background: radial-gradient(circle at center, rgba(0, 109, 119, 0.1) 0%, transparent 70%);
	}
	.hero-title {
		font-size: clamp(2.5rem, 8vw, 4rem);
		font-weight: 900;
		margin-bottom: 1rem;
		background: var(--hdb-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		letter-spacing: -0.02em;
	}
	.hero-subtitle {
		font-size: 1.25rem;
		color: var(--hdb-text-muted);
		max-width: 600px;
		margin: 0 auto 2.5rem;
		line-height: 1.6;
	}
	.hero-actions {
		display: flex;
		gap: 1.5rem;
		justify-content: center;
		flex-wrap: wrap;
	}
	.hero-btn {
		padding: 1rem 2.5rem;
		font-size: 1.125rem;
		border-radius: 99px;
		text-decoration: none;
	}
	.section-title {
		text-align: center;
		font-size: 2rem;
		margin-bottom: 3rem;
		color: var(--hdb-text);
	}
	.tools-section {
		margin-bottom: 6rem;
	}
	.comparison-card {
		padding: 2.5rem;
		text-decoration: none;
		color: inherit;
		transition: var(--hdb-transition-standard);
	}
	.comparison-card:hover {
		transform: translateY(-8px);
		border-color: var(--hdb-teal);
	}
	.card-icon {
		font-size: 3.5rem;
		margin-bottom: 1.5rem;
	}
	.card-heading {
		font-size: 1.5rem;
		margin-bottom: 0.75rem;
		color: var(--hdb-text);
	}
	.card-text {
		color: var(--hdb-text-muted);
		font-size: 1rem;
		line-height: 1.6;
		margin-bottom: 1.5rem;
	}
	.card-action {
		color: var(--hdb-teal);
		font-weight: 700;
		font-size: 0.9375rem;
	}
	.features-section {
		margin-bottom: 6rem;
		padding: 4rem 1.5rem;
		background: var(--hdb-bg-elevated);
		border-radius: 24px;
	}
	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 3rem;
	}
	.feature-item {
		text-align: center;
	}
	.feature-icon {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}
	.feature-heading {
		font-size: 1.25rem;
		margin-bottom: 0.5rem;
		color: var(--hdb-text);
	}
	.feature-text {
		color: var(--hdb-text-muted);
		font-size: 0.9375rem;
	}
	.data-source-card {
		padding: 3rem;
		text-align: center;
		margin-bottom: 4rem;
	}
	.external-link {
		color: var(--hdb-teal);
		font-weight: 700;
		text-decoration: none;
		font-size: 1.125rem;
	}
	.external-link:hover {
		text-decoration: underline;
	}
</style>
		<Footer />
	</body>
</html>
